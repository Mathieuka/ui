{
  "compilerOptions": {
    "outDir": "lib",
    "target": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "paths": {
      "public/*": ["./public/*"],
      "ui/*": ["./src/ui/*"],
      "hook/*": ["./src/hook/*"]
    }
  },
  "include": ["src/**/*", "stories/atoms/samples"],
  "exclude": [
    "node-modules",
    "lib",
    "src/packages/**/tests/*.spec.tsx",
    "src/packages/**/tests/*.test.tsx",
    "src/packages/**/stories/*.stories.tsx",
    "src/packages/**/stories/*.samples.tsx"
  ]
}
